
DB_HOST=localhost
DB_PORT=5432
DB_NAME=contacts_db
DB_USER=contacts_user
DB_PASSWORD=contacts_password


# Application
APP_NAME=Contact Management API
APP_VERSION=1.0.0
DEBUG=true

# Security (додати ці рядки)
SECRET_KEY=your-super-secret-jwt-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Email Configuration (додати ці рядки)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_FROM=your-email@gmail.com
MAIL_PORT=587
MAIL_SERVER=smtp.gmail.com

# Cloudinary (додати ці рядки)
CLOUDINARY_NAME=your-cloudinary-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Rate Limiting (додати цей рядок)
RATE_LIMIT_ME_ENDPOINT=10